{
    "version": "0.2.0",
    "configurations": [
        {
            "name":"Python: FastAPI",
            "type":"python",
            "cwd": "${workspaceFolder}/api",
            "request":"launch",
            "module":"uvicorn",
            "args": ["main:app", "--reload"],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Flutter (Edge)",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}/app",
            "deviceId": "edge",
            "request": "launch",
            "type": "dart",
            "args": ["--web-browser-flag", "--disable-web-security"]
        },
        {
            "name": "Flutter (Chrome)",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}/app",
            "deviceId": "chrome",
            "request": "launch",
            "type": "dart",
            "args": ["--web-browser-flag", "--disable-web-security"]
        },
        {
            "name": "Flutter (Windows)",
            "program": "lib/main.dart",
            "cwd": "${workspaceFolder}/app",
            "deviceId": "windows",
            "request": "launch",
            "type": "dart"
        }
    ]
}